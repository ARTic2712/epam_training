@model IEnumerable<SaleSystem.Web.MVC.Models.Sale>

@{
    ViewBag.Title = "Продажи";
}

<h2>Продажи</h2>


<div>
    @using (Ajax.BeginForm("SearchSales", new AjaxOptions { UpdateTargetId = "results", LoadingElementId = "loading", InsertionMode =InsertionMode.Replace }))
    {
        <input type="text" name="searchText" />
        <input type="date" name="dateSearch" min="1900-01-01"/>
        <input type="submit" value="Поиск" />
    }
    <div id="loading" style="display:none; color:Red; font-weight:bold;">
        <p>Идет загрузка...</p>
    </div>
    <div id="results"></div>
</div>

@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

